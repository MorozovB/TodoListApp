@model TodoTaskDetailsViewModel
@using System.Security.Claims

@{
    ViewData["Title"] = Model.Title;
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="TodoList" asp-action="Index">My Lists</a></li>
        <li class="breadcrumb-item">
            <a asp-controller="TodoList" asp-action="Details" asp-route-id="@Model.TodoListId">
                @Model.TodoListTitle
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-8">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h2>@Model.Title</h2>
            <div class="btn-group" role="group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <form asp-action="Delete" asp-route-id="@Model.Id" asp-route-todoListId="@Model.TodoListId" 
                      method="post" class="d-inline" 
                      onsubmit="return confirm('Are you sure you want to delete this task?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
            </div>
        </div>

        @if (Model.IsOverdue)
        {
            <div class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>This task is overdue!</strong> It was due on @Model.FormattedDueDate.
            </div>
        }

        <div class="card mb-4">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        <span class="@Model.StatusBadgeClass">@Model.StatusText</span>
                    </dd>

                    <dt class="col-sm-3">Priority</dt>
                    <dd class="col-sm-9">
                        <span class="@Model.PriorityCssClass">@Model.PriorityText</span>
                    </dd>

                    <dt class="col-sm-3">Created</dt>
                    <dd class="col-sm-9">@Model.FormattedCreatedDate</dd>

                    <dt class="col-sm-3">Due Date</dt>
                    <dd class="col-sm-9">
                        <span class="@(Model.IsOverdue ? "text-danger fw-bold" : "")">
                            @Model.FormattedDueDate
                        </span>
                    </dd>

                    @if (Model.IsCompleted)
                    {
                        <dt class="col-sm-3">Completed</dt>
                        <dd class="col-sm-9">@Model.FormattedCompletedDate</dd>
                    }

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrWhiteSpace(Model.Description))
                        {
                            <p class="mb-0">@Model.Description</p>
                        }
                        else
                        {
                            <em class="text-muted">No description provided</em>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <!-- Tags Section (US17, US20, US21) -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-tags"></i> Tags
                </h5>
            </div>
            <div class="card-body">
                <div id="tags-container" class="mb-3">
                    <div class="spinner-border spinner-border-sm" role="status">
                        <span class="visually-hidden">Loading tags...</span>
                    </div>
                </div>
                
                <div class="input-group">
                    <input type="text" id="new-tag-input" class="form-control" placeholder="Add new tag...">
                    <button class="btn btn-outline-primary" type="button" id="add-tag-btn">
                        <i class="bi bi-plus"></i> Add Tag
                    </button>
                </div>
            </div>
        </div>

        <!-- Comments Section (US22, US23, US24, US25) -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-chat-dots"></i> Comments
                </h5>
            </div>
            <div class="card-body">
                <div id="comments-container">
                    <div class="spinner-border spinner-border-sm" role="status">
                        <span class="visually-hidden">Loading comments...</span>
                    </div>
                </div>

                <div class="mt-3 pt-3 border-top">
                    <h6>Add Comment</h6>
                    <div class="mb-3">
                        <textarea id="new-comment-input" class="form-control" rows="3" placeholder="Write your comment..."></textarea>
                    </div>
                    <button class="btn btn-primary" id="add-comment-btn">
                        <i class="bi bi-send"></i> Add Comment
                    </button>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2">
            <form asp-action="ToggleComplete" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn @(Model.IsCompleted ? "btn-warning" : "btn-success")">
                    @if (Model.IsCompleted)
                    {
                        <i class="bi bi-arrow-counterclockwise"></i> <text>Mark as Incomplete</text>
                    }
                    else
                    {
                        <i class="bi bi-check-circle"></i> <text>Mark as Complete</text>
                    }
                </button>
            </form>

            <a asp-controller="TodoList" asp-action="Details" asp-route-id="@Model.TodoListId" 
               class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                        Edit Task
                    </a>
                    <a asp-controller="TodoList" asp-action="Details" asp-route-id="@Model.TodoListId" 
                       class="btn btn-outline-secondary">
                        View All Tasks
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const taskId = @Model.Id;
        const userId = '@userId';
        
        // Load tags
        async function loadTags() {
            try {
                const response = await fetch(`/Tags/GetTaskTags/${taskId}`);
                const tags = await response.json();
                
                const container = document.getElementById('tags-container');
                if (tags.length === 0) {
                    container.innerHTML = '<em class="text-muted">No tags added yet</em>';
                } else {
                    container.innerHTML = tags.map(tag => `
                        <span class="badge bg-primary me-2">
                            ${tag.name}
                            <button class="btn-close btn-close-white ms-1" 
                                    onclick="removeTag(${tag.id})" 
                                    aria-label="Remove"></button>
                        </span>
                    `).join('');
                }
            } catch (error) {
                console.error('Error loading tags:', error);
                document.getElementById('tags-container').innerHTML = 
                    '<span class="text-danger">Error loading tags</span>';
            }
        }

        // Add tag
        document.getElementById('add-tag-btn').addEventListener('click', async () => {
            const input = document.getElementById('new-tag-input');
            const tagName = input.value.trim();
            
            if (!tagName) return;
            
            try {
                const response = await fetch(`/Tags/AddTagToTask`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ taskId: taskId, tagName: tagName })
                });
                
                if (response.ok) {
                    input.value = '';
                    await loadTags();
                }
            } catch (error) {
                console.error('Error adding tag:', error);
            }
        });

        // Remove tag
        async function removeTag(tagId) {
            try {
                const response = await fetch(`/Tags/RemoveTagFromTask`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ taskId: taskId, tagId: tagId })
                });
                
                if (response.ok) {
                    await loadTags();
                }
            } catch (error) {
                console.error('Error removing tag:', error);
            }
        }

        // Load comments
        async function loadComments() {
            try {
                const response = await fetch(`/api/comments/task/${taskId}`, {
                    headers: {
                        'X-User-Id': userId,
                        'Authorization': 'Bearer your-super-secret-token-12345'
                    }
                });
                const comments = await response.json();
                
                const container = document.getElementById('comments-container');
                if (comments.length === 0) {
                    container.innerHTML = '<em class="text-muted">No comments yet</em>';
                } else {
                    container.innerHTML = comments.map(comment => `
                        <div class="card mb-2">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <small class="text-muted">
                                        ${new Date(comment.createdDate).toLocaleString()}
                                    </small>
                                    <button class="btn btn-sm btn-outline-danger" 
                                            onclick="deleteComment(${comment.id})">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                                <p class="mb-0 mt-2">${comment.content}</p>
                            </div>
                        </div>
                    `).join('');
                }
            } catch (error) {
                console.error('Error loading comments:', error);
                document.getElementById('comments-container').innerHTML = 
                    '<span class="text-danger">Error loading comments</span>';
            }
        }

        // Add comment
        document.getElementById('add-comment-btn').addEventListener('click', async () => {
            const input = document.getElementById('new-comment-input');
            const content = input.value.trim();
            
            if (!content) return;
            
            try {
                const response = await fetch(`/api/comments/task/${taskId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-User-Id': userId,
                        'Authorization': 'Bearer your-super-secret-token-12345'
                    },
                    body: JSON.stringify(content)
                });
                
                if (response.ok) {
                    input.value = '';
                    await loadComments();
                }
            } catch (error) {
                console.error('Error adding comment:', error);
            }
        });

        // Delete comment
        async function deleteComment(commentId) {
            if (!confirm('Are you sure you want to delete this comment?')) return;
            
            try {
                const response = await fetch(`/api/comments/${commentId}`, {
                    method: 'DELETE',
                    headers: {
                        'X-User-Id': userId,
                        'Authorization': 'Bearer your-super-secret-token-12345'
                    }
                });
                
                if (response.ok) {
                    await loadComments();
                }
            } catch (error) {
                console.error('Error deleting comment:', error);
            }
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            loadTags();
            loadComments();
        });
    </script>
}