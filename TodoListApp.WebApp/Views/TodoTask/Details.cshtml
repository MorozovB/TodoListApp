@model TodoTaskDetailsViewModel

@{
    ViewData["Title"] = Model.Title;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="TodoList" asp-action="Index">My Lists</a></li>
        <li class="breadcrumb-item">
            <a asp-controller="TodoList" asp-action="Details" asp-route-id="@Model.TodoListId">
                @Model.TodoListTitle
            </a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-8">
        <div class="d-flex align-items-center justify-content-between mb-3">
            <h2>@Model.Title</h2>
            <div class="btn-group" role="group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <form asp-action="Delete" asp-route-id="@Model.Id" asp-route-todoListId="@Model.TodoListId" 
                      method="post" class="d-inline" 
                      onsubmit="return confirm('Are you sure you want to delete this task?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
            </div>
        </div>

        @* US10: Highlight overdue tasks *@
        @if (Model.IsOverdue)
        {
            <div class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>This task is overdue!</strong> It was due on @Model.FormattedDueDate.
            </div>
        }

        <div class="card mb-4">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        <span class="@Model.StatusBadgeClass">@Model.StatusText</span>
                    </dd>

                    <dt class="col-sm-3">Priority</dt>
                    <dd class="col-sm-9">
                        <span class="@Model.PriorityCssClass">@Model.PriorityText</span>
                    </dd>

                    <dt class="col-sm-3">Created</dt>
                    <dd class="col-sm-9">@Model.FormattedCreatedDate</dd>

                    <dt class="col-sm-3">Due Date</dt>
                    <dd class="col-sm-9">
                        <span class="@(Model.IsOverdue ? "text-danger fw-bold" : "")">
                            @Model.FormattedDueDate
                        </span>
                    </dd>

                    @if (Model.IsCompleted)
                    {
                        <dt class="col-sm-3">Completed</dt>
                        <dd class="col-sm-9">@Model.FormattedCompletedDate</dd>
                    }

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrWhiteSpace(Model.Description))
                        {
                            <p class="mb-0">@Model.Description</p>
                        }
                        else
                        {
                            <em class="text-muted">No description provided</em>
                        }
                    </dd>
                </dl>
            </div>
        </div>

        <div class="d-flex gap-2">
            <form asp-action="ToggleComplete" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn @(Model.IsCompleted ? "btn-warning" : "btn-success")">
                    @if (Model.IsCompleted)
                    {
                        <i class="bi bi-arrow-counterclockwise"></i> <text>Mark as Incomplete</text>
                    }
                    else
                    {
                        <i class="bi bi-check-circle"></i> <text>Mark as Complete</text>
                    }
                </button>
            </form>

            <a asp-controller="TodoList" asp-action="Details" asp-route-id="@Model.TodoListId" 
               class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                        Edit Task
                    </a>
                    <a asp-controller="TodoList" asp-action="Details" asp-route-id="@Model.TodoListId" 
                       class="btn btn-outline-secondary">
                        View All Tasks
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh after toggle complete
        document.querySelector('form[asp-action="ToggleComplete"]')?.addEventListener('submit', function(e) {
            setTimeout(() => location.reload(), 500);
        });
    </script>
}