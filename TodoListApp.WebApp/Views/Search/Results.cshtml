@model SearchResultsViewModel

@{
    ViewData["Title"] = "Search Results";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> New Search
    </a>
</div>

<div class="alert alert-info">
    <strong>Search Query:</strong> "@Model.SearchQuery"
    @if (Model.StartDate.HasValue || Model.EndDate.HasValue)
    {
        <br />
        <strong>Date Range:</strong>
        @($"{Model.StartDate?.ToString("MMM dd, yyyy") ?? "Any"} - {Model.EndDate?.ToString("MMM dd, yyyy") ?? "Any"}")
    }
    <br />
    <strong>Results Found:</strong> @Model.TotalCount
</div>

@if (Model.Tasks.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Priority</th>
                    <th>Created Date</th>
                    <th>Due Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model.Tasks)
                {
                    <tr class="@(task.IsOverdue ? "table-danger" : "")">
                        <td>
                            <a asp-controller="TodoTask" asp-action="Details" asp-route-id="@task.Id">
                                @task.Title
                            </a>
                            @if (!string.IsNullOrEmpty(task.Description))
                            {
                                <br />
                                <small class="text-muted">@task.Description</small>
                            }
                            @if (task.IsOverdue)
                            {
                                <span class="badge bg-danger ml-2">
                                    <i class="bi bi-exclamation-triangle"></i> Overdue
                                </span>
                            }
                        </td>
                        <td>
                            <span class="@task.StatusBadgeClass">@task.Status</span>
                        </td>
                        <td>
                            <span class="@task.PriorityBadgeClass">@task.Priority</span>
                        </td>
                        <td>@task.CreatedDate.ToString("MMM dd, yyyy")</td>
                        <td class="@(task.IsOverdue ? "text-danger fw-bold" : "")">
                            @(task.DueDate?.ToString("MMM dd, yyyy") ?? "-")
                        </td>
                        <td>
                            <a asp-controller="TodoTask" asp-action="Details" asp-route-id="@task.Id" 
                               class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a asp-controller="TodoList" asp-action="Details" asp-route-id="@task.TodoListId" 
                               class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-list"></i> View List
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Results" 
                           asp-route-q="@Model.SearchQuery"
                           asp-route-startDate="@Model.StartDate"
                           asp-route-endDate="@Model.EndDate"
                           asp-route-pageNumber="@(Model.PageNumber - 1)">Previous</a>
                    </li>
                }
                
                @for (var i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-action="Results" 
                           asp-route-q="@Model.SearchQuery"
                           asp-route-startDate="@Model.StartDate"
                           asp-route-endDate="@Model.EndDate"
                           asp-route-pageNumber="@i">@i</a>
                    </li>
                }
                
                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Results" 
                           asp-route-q="@Model.SearchQuery"
                           asp-route-startDate="@Model.StartDate"
                           asp-route-endDate="@Model.EndDate"
                           asp-route-pageNumber="@(Model.PageNumber + 1)">Next</a>
                    </li>
                }
            </ul>
        </nav>
    }
}
else
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i> No tasks found matching your search criteria.
    </div>
}
