@using TodoListApp.Entities.Enums
@model TodoListDetailsViewModel
@{
    ViewData["Title"] = Model.Title;
}

@* Breadcrumb *@
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-controller="TodoLists" asp-action="Index">My Lists</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
    </ol>
</nav>

<div class="d-flex align-items-center justify-content-between mb-3">
    <h2 class="m-0">@Model.Title</h2>
    <fieldset class="btn-group" role="group" aria-label="Actions">
        <a asp-controller="TodoList" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
        <form asp-controller="TodoList" asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Delete this list?');" style="display:inline;">
            <button type="submit" class="btn btn-outline-danger">Delete</button>
            @Html.AntiForgeryToken()
        </form>
        <a asp-controller="TodoList" asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
    </fieldset>
</div>

<div class="card mb-4">
    <div class="card-body">
        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <p class="card-text">@Model.Description</p>
        }
        <dl class="row mb-2">
            <dt class="col-sm-3">Created</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">Total tasks</dt>
            <dd class="col-sm-9">@Model.TotalTasksCount</dd>

            <dt class="col-sm-3">Completed</dt>
            <dd class="col-sm-9">@Model.CompletedTasksCount</dd>
        </dl>

        <div class="progress" style="height: 18px;">
            @{
                var progress = Model.TotalTasksCount == 0 ? 0 : (int)Math.Round(100.0 * Model.CompletedTasksCount / Model.TotalTasksCount);
            }
            <progress class="progress w-100"
                      value="@progress"
                      max="100">
                @progress%
            </progress>
        </div>
    </div>
</div>

<!-- 6.7 –§–∏–ª—å—Ç—Ä–∞—Ü–∏—è –∏ —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫–∞ -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <ul class="nav nav-tabs" id="taskFilter">
        <li class="nav-item">
            <button class="nav-link active" data-filter="all" type="button">All tasks</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-filter="active" type="button">Active (pending)</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-filter="completed" type="button">Completed</button>
        </li>
    </ul>
    <div>
        <select id="sortSelect" class="form-select form-select-sm">
            <option value="created">By date created</option>
            <option value="due">By due date</option>
            <option value="priority">By priority</option>
            <option value="name">By name</option>
        </select>
    </div>
</div>

<h3>Tasks</h3>
@if (Model.Tasks == null || !Model.Tasks.Any())
{
    <div class="text-center p-4 border rounded empty-state">
        <div style="font-size:48px;">üì≠</div>
        <p class="mb-1">No tasks yet. Add your first task below!</p>
    </div>
}
else
{
    <div id="tasksList" class="list-group">
        @foreach (var task in Model.Tasks.OrderBy(t => t.DueDate ?? DateTime.MaxValue))
        {
            var overdue = task.DueDate.HasValue && task.DueDate.Value.Date < DateTime.UtcNow.Date && !task.IsCompleted;
            var priorityClass = task.Priority switch
            {
                (int)TaskPriority.High => "badge bg-danger",
                (int)TaskPriority.Medium => "badge bg-warning text-dark",
                (int)TaskPriority.Low => "badge bg-secondary",
                _ => "badge bg-secondary"
            };

            var cardClass = overdue ? "list-group-item list-group-item-action mb-2 task-card border-danger" : "list-group-item list-group-item-action mb-2 task-card";

            <div class="@cardClass" data-task-id="@task.Id" data-completed="@task.IsCompleted.ToString().ToLower()">
                @if (overdue)
                {
                    <div class="position-absolute top-0 end-0 m-2">
                        <span class="badge bg-danger">
                            <i class="bi bi-exclamation-triangle-fill"></i> OVERDUE
                        </span>
                    </div>
                }

                <div class="d-flex w-100 justify-content-between align-items-start">
                    <div class="form-check">
                        <input class="form-check-input task-toggle" type="checkbox" value="" id="chk-@task.Id" @(task.IsCompleted ? "checked" : "") />
                        <label class="form-check-label" for="chk-@task.Id">
                            <a asp-controller="TodoTask" asp-action="Details" asp-route-id="@task.Id"
                               class="task-title text-decoration-none @(task.IsCompleted ? "text-decoration-line-through" : "")">
                                @task.Title
                            </a>
                        </label>
                    </div>
                    <div class="text-end">
                        <span class="me-2 @priorityClass">@task.Priority</span>
                        @* US10: Highlight overdue date in red *@
                        <small class="me-2 @(overdue ? "text-danger fw-bold" : "text-muted")">
                            @if (overdue)
                            {
                                <i class="bi bi-exclamation-circle-fill"></i>
                            }
                            @((task.DueDate.HasValue) ? task.DueDate.Value.ToString("yyyy-MM-dd") : "‚Äî")
                        </small>
                        <div class="btn-group">
                            <a asp-controller="TodoTask" asp-action="Edit" asp-route-id="@task.Id"
                               class="btn btn-sm btn-outline-secondary" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <button type="button" class="btn btn-sm btn-outline-danger btn-delete-task"
                                    data-task-id="@task.Id" title="Delete">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrWhiteSpace(task.Description))
                {
                    <button class="small mt-2 d-inline-block btn btn-link p-0"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#desc-@task.Id"
                            aria-expanded="false"
                            aria-controls="desc-@task.Id">
                        Show description
                    </button>
                    <div class="collapse mt-2" id="desc-@task.Id">
                        <div class="card card-body p-2">@task.Description</div>
                    </div>
                }
            </div>
        }
    </div>
}

<div class="card mt-4">
    <div class="card-body">
        <h4>Add New Task</h4>
        <form id="addTaskForm" asp-controller="TodoTask" asp-action="Create" asp-route-todoListId="@Model.Id" method="post" class="row g-2 align-items-end">
            @Html.AntiForgeryToken()

            <div class="col-md-4">
                <label for="TitleInput" class="form-label">Title</label>
                <input id="TitleInput"
                       name="Title"
                       class="form-control form-control-sm"
                       required />
            </div>

            <div class="col-md-4">
                <label for="DueDateInput" class="form-label">Due Date</label>
                <input id="DueDateInput"
                       type="date"
                       name="DueDate"
                       class="form-control form-control-sm" />
            </div>

            <div class="col-md-2">
                <label for="PrioritySelect" class="form-label">Priority</label>
                <select id="PrioritySelect" name="Priority" class="form-select form-select-sm">
                    <option value="0">Low</option>
                    <option value="1" selected>Medium</option>
                    <option value="2">High</option>
                </select>
            </div>

            <div class="col-md-12">
                <button class="btn btn-link p-0 small"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#descNew"
                        aria-expanded="false"
                        aria-controls="descNew">
                    Description (optional)
                </button>

                <div class="collapse mt-2" id="descNew">
                    <textarea name="Description" class="form-control" rows="3"></textarea>
                </div>
            </div>

            <div class="col-12 text-end">
                <button type="submit" class="btn btn-primary btn-sm">Add Task</button>
            </div>
        </form>
    </div>
</div>

