@model TodoListApp.Models.ViewModels.TodoListEditViewModel

@{
    ViewData["Title"] = "Edit To-Do List";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-3 text-center">@ViewData["Title"]</h2>
            <h5 class="text-muted text-center mb-4">@Model.Title</h5>

            <form asp-action="Edit" method="post" asp-route-id="@Model.Id">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Hidden ID -->
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter a new title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="5" placeholder="Update the description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i> Save Changes
                    </button>

                    <div>
                        <a asp-action="Index" class="btn btn-secondary me-2">
                            <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                        </a>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display: inline;">
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this to-do list?');">
                                <i class="bi bi-trash me-1"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
