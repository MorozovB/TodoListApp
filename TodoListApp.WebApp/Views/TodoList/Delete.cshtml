@model TodoListApp.Models.ViewModels.TodoListViewModel

@{
    ViewData["Title"] = "Delete To-Do List";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center mb-4 text-danger">
                <i class="bi bi-trash-fill me-2"></i> @ViewData["Title"]
            </h2>

            <div class="alert alert-danger text-center" role="alert">
                <strong>Are you sure you want to delete this list?</strong><br />
                This action cannot be undone!
            </div>

            <dl class="row border rounded p-3 bg-light">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Created</dt>
                <dd class="col-sm-9">@Model.FormattedCreateDate</dd>

                <dt class="col-sm-3">Tasks</dt>
                <dd class="col-sm-9">@Model.TaskCount</dd>
            </dl>

            @if (Model.TaskCount > 0)
            {
                <div class="alert alert-warning mt-3 text-center fw-bold text-danger">
                    This list contains @Model.TaskCount task(s). All tasks will be deleted!
                </div>
            }

            <form asp-action="Delete" method="post" class="mt-4 text-center">
                <input type="hidden" asp-for="Id" />

                <div class="form-check d-flex justify-content-center mb-3">
                    <input class="form-check-input me-2" type="checkbox" id="confirmDelete" />
                    <label class="form-check-label fw-bold text-danger" for="confirmDelete">
                        I understand this action cannot be undone
                    </label>
                </div>

                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger" id="deleteButton" disabled>
                        <i class="bi bi-trash me-1"></i> Delete
                    </button>

                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('confirmDelete').addEventListener('change', function () {
            document.getElementById('deleteButton').disabled = !this.checked;
        });
    </script>
}
